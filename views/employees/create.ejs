<%- include('../layouts/header', {title: 'Index Users'}); -%>
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <h1 class="display-4 text-center">Create new employee</h1>

            <div class="card-body">
                <div class="alert alert-success" role="alert">
                    Obavestenja
                </div>
                
                <form action="">
                    <div class="form-group">
                        <label for="fname">First name</label>
                        <input type="text" name="fname" id="fname" placeholder="Your first name" class="form-control">                                
                    </div>

                    <div class="form-group">
                        <label for="lname">Last name</label>
                        <input type="text" name="lname" id="lname" placeholder="Your last name" class="form-control">
                    </div>

                    <div class="form-group">                     
                        <label for="email">E-mail name</label>
                        <input type="email" name="email" id="email" placeholder="Your e-mail" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone number</label>
                        <input type="text" name="phone" id="phone" placeholder="Your phone number" class="form-control">                        
                    </div>

                    <input type="hidden" name="company_id" id="company_id">

                    <button type="submit" class="btn btn-primary btn-lg float-right">Create</button>
                </form>

            </div>
        </div>
    </div>
</div>
<%- include('../layouts/footer'); -%>